doctype html
html(lang="es" class="font-karla font-thin scroll-smooth")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./assets/css/styles.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Karla:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet")
        link(rel="shortcut icon", href="https://drive.google.com/uc?export=view&id=1S5Dfb4ER5X1faqUdnRqa1qwsqWTvLRPp", type="image/x-icon")
        script(harset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/embed/v2.js")
        
        style.
            p::selection, a::selection, span::selection, img::selection, iframe::selection{
                background:#e11d48;
            }
            .langs .compact img{
                width:100vw;
                max-width:350px;
            }
            .langs .full-lang img{
                width:100vw
            }
            .hid{
                position:relative;
                top:-60px;
            }
            //- .hero div p{
            //-     bacbackground-color:#0000002e;
            //- }
            .repos{
                grid-template-columns: repeat(auto-fit, minmax(350px, auto));
                gap:20px;
            }
            .grid-temp{
                display: grid;
            }
            .tool-grid{
                grid-template-columns: repeat(auto-fit, minmax(40px, auto));
                gap:48px;
            }
            .icon-container span{
                background-position: center;
                background-repeat: no-repeat;
                background-size:contain;
                width: 54px;
                height:54px;
            }
            .icon-container p{
                visibility:hidden;
            }
            .icon-container:hover p{
                    visibility:visible;
            }
            .icon-container{
                transition: ease-in-out .2s;
            }
            .icon-container:hover{
                    transform:scale(1.2);
                    transition: ease-in-out .2s;
            }

            .icon-container{
                display:flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }

        title César Cobos Home
    body 
        include ./components/_header.pug

        include ./components/_hero.pug

        main
            //- include ./components/_about.pug
            //- include ./components/_projects.pug
            include ./components/_tools.pug
            include ./components/_github.pug
            

            +title-section("Déjame un mensaje","contact")
            section( class="w-full h-auto flex")
                div(class="w-full max-w-[500px] relative md:left-[calc(50vw-250px)] px-4")
                    script(src="./assets/js/form.js") 
            div(class="hid w-full h-12 bg-white")

        include ./components/_footer.pug

        

        script(src="./assets/js/main.js")
        script(src="https://kit.fontawesome.com/32dce108fb.js" crossorigin="anonymous")
        
        




