mixin navlink(name, url)
    a(class="hover:text-rose-600 ease-in-out duration-200 text-lg" href=url rel="noreferrer")=name
mixin fullnav()
    ul(class="flex pr-6")
        li(class="px-4")
            +navlink("Home","#hero")
        li(class="px-4")
            +navlink("Proyectos","#project")
        li(class="px-4")
            +navlink("Contacto","#contact")
        
mixin cta-button(cta,url)
    a(class=" font-bold text-white bg-rose-600 hover:bg-rose-700 px-6 py-3  rounded-lg ease-in-out duration-200" href=url target="_blank" rel="noreferrer")=cta

mixin social-icon(icon,title, url)
    a(href=url target="_blank" rel="noreferrer" class="mx-4 hover:scale-150 hoverSpan ease-in-out duration-200" title=title)
        i(class="fa-brands" class=icon)
mixin title-section(text,id)
    div(id=id class="flex justify-center pt-32 pb-8 text-center")
        p(class="text-4xl font-bold")=text
mixin github-repo(url, img,clas)
    a(href=url class=clas)
        img(class="hover:scale-[1.05] ease-in-out duration-200" align="center" src=img)